generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model Session {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())

  songs     Song[]
}

model Song {
  id        String   @id @default(uuid())
  trackId   String            // Spotify (or external API) song ID
  title     String
  artist    String
  imageUrl  String?
  addedBy   String            // userId who added the song
  votes     Int      @default(0)

  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id])

  votesList Vote[]

  createdAt DateTime @default(now())

  @@unique([sessionId, trackId]) // same song only once per session
}

model Vote {
  id      String @id @default(uuid())
  songId String
  userId String

  song   Song   @relation(fields: [songId], references: [id])

  @@unique([songId, userId]) // user can vote once per song
}
